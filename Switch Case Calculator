#include <iostream>
#include<math.h>

using namespace std;




int main()
{    
    
    // calculator using switch case
    int a, b;
    cout<<"Enter the value of a and b"<<endl;
    cin>>a>>b;
    
    cout<<"Enter the Operation You want to perform"<<endl;
    
    char op;
    cin>>op;
    
    switch(op){
        
        case '+': cout<<a+b<<endl;
        break;
        
        case '-': cout<<a-b<<endl;
        break;
        
        case '*': cout<<a*b<<endl;
        break;
        
        case '/': cout<<a/b<<endl;
        break;
        
        
        
    }
    
    
    
 
   
}
